<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jth.kakao.pay.test">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.SignInActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="authorize"
                    android:scheme="githubuser" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.UserListActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".view.UserDetailActivity"
            android:label="@string/github_list_detail"
            android:parentActivityName=".view.UserListActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.UserListActivity"/>
        </activity>
    </application>
</manifest>